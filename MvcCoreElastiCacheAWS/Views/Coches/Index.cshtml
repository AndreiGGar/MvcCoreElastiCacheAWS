@model IEnumerable<MvcCoreElastiCacheAWS.Models.Coche>

@{
    ViewData["Title"] = "Index";
}

<h4>Index</h4>

<a asp-controller="Coches" asp-action="Favoritos" class="btn btn-warning">Mostrar Favoritos</a>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IdCoche)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Marca)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Modelo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Imagen)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.IdCoche)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Marca)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Modelo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Imagen)
                </td>
                <td>
                    <a asp-controller="Coches" asp-action="Details" asp-route-id="@item.IdCoche" class="btn btn-primary">Details</a>
                    <a asp-controller="Coches" asp-action="SeleccionarFavorito" asp-route-idcoche="@item.IdCoche" class="btn btn-warning">Seleccionar Favorito</a>
                </td>
            </tr>
        }
    </tbody>
</table>
